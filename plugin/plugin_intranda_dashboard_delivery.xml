<?xml version="1.0" encoding="UTF-8"?>

<config_plugin>

    <doctypes>
        <!-- used to create monographic items -->
        <monographic>Monograph</monographic>
        <!-- Document type to register ZDB title data -->
        <zdbRecordType>ZdbTitle</zdbRecordType>
        <!-- document types to create new issue items -->
        <journalType>Periodical</journalType>
        <issueType>PeriodicalVolume</issueType>

        <!-- metadata field for ZDB ID -->
        <zdbId>CatalogIDPeriodicalDB</zdbId>
    </doctypes>

    <processtemplates>
        <!-- process template for monogrpaphic items -->        
        <monograph>Standard</monograph>
        <!-- process template to register ZDB title data -->
        <zdbTitle>ZDB_template</zdbTitle>
        <!-- process template for issues-->        
        <journal>Standard</journal>
    </processtemplates>

    <vocabularyServerUrl>https://example.com/vocabulary/records/</vocabularyServerUrl>

    <!-- metadata fields for monographic items -->

    <group label="Titelinformationen" pageName="data1" documentType="monograph">
        <field rulesetName="TitleDocMain" label="Titel" displayType="input" metadataLevel="anchor" cardinality="1" marcMainTag="245" marcSubTag="a" validationExpression=".+" validationErrorText="Die Angabe ist ein Pflichtfeld" helpMessage="Tragen Sie hier den Titel ein."></field>
        <field rulesetName="TitleDocSub" label="Untertitel" displayType="input" metadataLevel="anchor" cardinality="*" marcMainTag="245" marcSubTag="b" validationExpression="" validationErrorText="" helpMessage="Hilfetext für Untertitel"></field>
    </group>

    <group label="Verantwortliche: Personen und Körperschaften" pageName="data1" documentType="monograph">

        <field rulesetName="Author" label="Autor*in, beteiligte Person" displayType="person" metadataLevel="anchor" cardinality="*" marcMainTag="100" marcSubTag="a" validationExpression="" validationErrorText="" helpMessage="Lorem ipsum">
            <selectfield value="Author" label="Autor" />
            <selectfield value="Artist" label="Künstler" />
            <selectfield value="Translator" label="Übersetzer" />
            <!-- <vocabulary name="PersonRoleTerms" displayField="Bezeichnung" importField="Metadatum" /> -->
        </field>

        <field rulesetName="Author" label="Beteiligte Organisation" displayType="corporate" metadataLevel="anchor" cardinality="*" marcMainTag="110" marcSubTag="a" validationExpression="" validationErrorText="" helpMessage="Lorem ipsum">
            <selectfield value="CorporateAuthor" label="Autor" />
            <selectfield value="CorporateArtist" label="Künstler" />
            <selectfield value="CorporateContributor" label="Mitwirkende Körperschaft" />
            <!-- <vocabulary name="CorporateRoleTerms" displayField="Bezeichnung" importField="Metadatum" /> -->
        </field>
    </group>

    <group label="Angaben zur Entstehung" pageName="data1" documentType="monograph">
        <field rulesetName="EditionStatement" label="Auflage, Stand oder Version" displayType="input" metadataLevel="anchor" cardinality="?" marcMainTag="245" marcSubTag="a" validationExpression="" validationErrorText="" helpMessage="Tragen Sie hier den Titel ein."></field>
        <field rulesetName="PublicationYear" label="Erscheinungsjahr" displayType="input" metadataLevel="anchor" cardinality="1" marcMainTag="245" marcSubTag="a" validationExpression="\d{4}" validationErrorText="Geben Sie eiene vierstellige Jahreszahl ein" helpMessage="Tragen Sie hier das Jahr ein."></field>
    </group>

    <group label="Sprache" pageName="data1" documentType="monograph">
        <field rulesetName="DocLanguage" label="Sprache" displayType="dropdown" metadataLevel="anchor" cardinality="+" marcMainTag="245" marcSubTag="a" validationExpression=".+" validationErrorText="Die Angabe ist ein Pflichtfeld" helpMessage="Tragen Sie hier den Titel ein.">
            <selectfield value="ger" label="Deutsch" />
            <selectfield value="eng" label="Englisch" />
        </field>
    </group>

    <group label="Ident-Nummern" pageName="data2" documentType="monograph">
        <field rulesetName="CatalogIDDigital" label="Ident-Nummer" displayType="picklist" metadataLevel="anchor" cardinality="?" marcMainTag="110" marcSubTag="a" validationExpression="" validationErrorText="" helpMessage="Lorem ipsum">
            <selectfield value="ISBN" label="ISBN" />
            <selectfield value="ISMN" label="ISMN" />
            <selectfield value="DOI" label="DOI" />
            <selectfield value="URN" label="URN" />
            <selectfield value="Handle" label="Handle" />
            <selectfield value="UPC" label="UPC" />
            <selectfield value="GTIN/EAN" label="GTIN/EAN" />
            <selectfield value="Best.-Nr." label="Best.-Nr." />
            <selectfield value="Eindeutige Identifikation (beliebige Angabe)" label="Eindeutige Identifikation (beliebige Angabe)" />
            <selectfield value="keine" label="keine" />
        </field>
    </group>

    <group label="Beziehungen zu anderen Ressourcen" pageName="data2" documentType="monograph">
        <field rulesetName="SeriesTitle" label="Titel der Reihe" displayType="input" metadataLevel="anchor" cardinality="*" marcMainTag="245" marcSubTag="a" validationExpression="" validationErrorText="" helpMessage="Tragen Sie hier den Titel ein."></field>
